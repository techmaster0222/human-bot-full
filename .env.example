# =============================================================================
# AdsPower Bot Engine - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# AdsPower Configuration
ADSPOWER_API_URL=http://localhost:50325
ADSPOWER_API_KEY=your_adspower_api_key_here

# IPRoyal Proxy Configuration
IPROYAL_USERNAME=your_iproyal_username
IPROYAL_PASSWORD=your_iproyal_password
IPROYAL_HOST=geo.iproyal.com
IPROYAL_PORT=12321

# API Server Configuration
API_KEY=your_secure_api_key_here
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT=100/minute

# Database
DATABASE_PATH=data/bot_events.db

# Logging
LOG_LEVEL=INFO
LOG_PATH=logs/api_events.log
